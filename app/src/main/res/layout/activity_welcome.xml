<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ecranAccueil"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/relative_encart"
        android:layout_marginBottom="10dp">

        <fr.clement.rennsurrection.bluesound.Objects.CustomTextView
            android:id="@+id/bluesound"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BlueSound"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            style="@style/Titre"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_marginTop="10dp"
            android:padding="0dp"
            android:paddingBottom="0dp"
            android:paddingEnd="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingStart="0dp"
            android:paddingTop="0dp"
            android:adjustViewBounds="false"
            app:srcCompat="@drawable/cadre_ombre"
            android:layout_centerInParent="true"
            android:layout_centerVertical="false"
            android:layout_width="240dp"
            android:layout_height="100dp" />

    </RelativeLayout>


    <ImageView
        app:srcCompat="@drawable/ic_cletestvect"
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"
        android:layout_centerInParent="true"
        android:layout_centerVertical="false"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_below="@+id/relative_encart" />

    <fr.clement.rennsurrection.bluesound.Objects.CustomTextView
        android:text="@string/presentation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:paddingBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        style="@style/sousTitre"
        android:textSize="15dp"
        app:font="ACaslonPro-Regular.otf"/>

</RelativeLayout>



