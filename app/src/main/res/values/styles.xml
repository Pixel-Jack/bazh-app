<resources>

    <style name="bluesoundTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/indigo</item>
        <item name="colorPrimaryDark">@color/indigo_dark</item>
        <item name="colorAccent">@color/indigo</item>
        <item name="android:colorControlHighlight">@color/white</item>
        <item name="android:colorControlNormal">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>
    </style>

    <style name="bluesoundTheme" parent="bluesoundTheme.Base">

    </style>


    <style name="MyButton" parent="android:style/Widget.Material.Button">
        <item name="android:background">@drawable/raised_button_background</item>
        <item name="android:elevation">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>



    <!-- Mise en forme -->
    <style name="layoutCorps">
        <item name="android:layout_marginTop">@dimen/marge_haute</item>
        <item name="android:layout_marginBottom">@dimen/marge_basse</item>
        <item name="android:layout_marginRight">@dimen/marge_cotes</item>
        <item name="android:layout_marginLeft">@dimen/marge_cotes</item>
    </style>

    <style name="enTete">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="boutons">
        <item name="android:background">@drawable/cadre_ombre</item>
        <item name="android:textStyle">normal|bold</item>
        <item name="android:layout_marginTop">@dimen/margeBasseTitre</item>
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/button_textSize</item>

    </style>

    <!-- Textes-->
    <style name="Titre" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/bleuBase</item>
        <item name="android:textSize">@dimen/titre</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/margeBasseTitre</item>
    </style>

    <style name="sousTitre" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/bleuClair</item>
        <item name="android:textSize">@dimen/titre</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/bleuClair</item>
        <item name="android:textSize">@dimen/texteBase</item>
    </style>


    <style name="sousTitrePrincipal" parent="sousTitre">
        <item name="android:layout_marginLeft">@dimen/marge_cotes</item>
        <item name="android:textSize">@dimen/tailleSousTitre</item>
    </style>

    <style name="sousTitreChoixBase" parent="sousTitre">
    </style>



</resources>
